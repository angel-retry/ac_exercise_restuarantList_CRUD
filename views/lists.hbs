<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="post">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" value="{{keyword}}"
            aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="d-flex justify-content-end mb-3">
        <a href="/lists/new">
          <button class="btn btn-outline-success px-5">
            <span><i class="fas fa-plus"></i></span>
            create</button>
        </a>
      </div>

      <div class="row row-cols-sm-3">
        {{#each lists}}
        <div class="mb-3">
          <a href="/lists/{{this.id}}" class="text-secondary">
            <div class="card mb-2">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>

                </span>

              </div>
            </div>
          </a>
          <div class="d-flex justify-content-end">
            <a href="/lists/{{this.id}}/edit">
              <button type="button" class="btn btn-brown me-1">edit</button>
            </a>

            <a href="/lists/{{this.id}}">
              <button type="button" class="btn btn-brown me-1">detail</button>
            </a>
            <form action="/lists/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-outline-danger">delete</button>

            </form>


          </div>
        </div>





        {{/each}}
      </div>
    </div>
  </div>
</div>