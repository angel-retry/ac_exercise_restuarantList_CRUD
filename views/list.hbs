<h1 class="mb-1 restaurant-show-title">{{list.name}}</h1>
<div class="container">
  <div class="col-10  row mx-auto">

    <img class="rounded mx-auto d-block mb-4 w-100 " src="{{list.image}}" alt="{{list.name}}" style="max-width: 500px;">
    <div class=" mb-4 col row">
      <div class="col">
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-store fa-sm"></i>
            店名：
          </span>
          {{list.name}}
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{list.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{list.location}}
          <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{list.phone}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-star pr-2"></i>
            評分
          </span>
          {{list.rating}}
        </p>

        <p class="mb-5">
          {{list.description}}
        </p>


      </div>
      <div class="d-flex justify-content-end  align-items-end ">
        <a href="/lists/{{list.id}}">
          <button type="button" class="btn btn-brown me-1">edit</button>
        </a>

        <a href="/lists">
          <button type="button" class="btn btn-brown me-1">back</button>
        </a>

        <form action="/lists/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-outline-danger">delete</button>

        </form>

      </div>

    </div>



  </div>
</div>